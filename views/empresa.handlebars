<form action="/addemp" method="POST">

    <p>Nome da empresa: </p>
    <input type="text" name="name" minlength="5">
    <p>CNPJ: </p>
    <input type="tel" name="cnpj" pattern="[0-9]{2}.[0-9]{3}.[0-9]{3}/[0-9]{4}-[0-9]{2}" placeholder="00.000.000/0000-00">
    <p>Data de Fundação: </p>
    <input type="date" name="data">
    <p>E-mail comercial: </p>
    <input type="email" name="email" placeholder="@gmail.com">
    <p>Telefone: </p>
    <input type="tel" name="telefone" pattern="[0-9]{2} [0-9]{5}-[0-9]{4}" placeholder="00 00000-0000">
    <p>CEP: </p>
    <input type="tel" name="cep" pattern="[0-9]{5}-[0-9]{3}" placeholder="0000‑000">
    <p>Endereço: </p>
    <input type="text" name="endereco"><br>
    
    <button type="submit">Cadastrar</button>
</form>
